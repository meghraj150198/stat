# Step 1: Load and Preview Data
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from scipy import stats

# Load dataset
df = pd.read_csv("US_Customer_Insights_Dataset.csv")

# Preview
print(df.head())
print(df.info())
print(df.describe(include="all"))

# Numerical summaries
print("Age:", df['Age'].mean(), df['Age'].median(), df['Age'].std())
print("MonthlySpend:", df['MonthlySpend'].mean(), df['MonthlySpend'].median(), df['MonthlySpend'].std())
print("DaysSinceLastInteraction:", df['DaysSinceLastInteraction'].mean(), df['DaysSinceLastInteraction'].median(), df['DaysSinceLastInteraction'].std())

# Mode for categorical variables
print("Gender Mode:", df['Gender'].mode()[0])
print("Education Mode:", df['Education'].mode()[0])
print("Married Mode:", df['Married'].mode()[0])
